<div class="page-header">
    <h1>Contact Me</h1>    
</div>
<form action="/contact/send" method="post" role="form">
    <div class="form-group">
        <label for="contact-from">From:</label>
        <input type="email" name="from" id="contact-from" placeholder="account@domain.com" class="form-control">
    </div>
    <div class="form-group">
        <label for="contact-subject">Subject:</label>
        <input type="text" name="subject" id="contact-subject" placeholder="Hello" class="form-control">
    </div>
    <div class="form-group">
        <label for="contact-message">Message:</label>
        <textarea name="message" id="contact-message" cols="30" rows="10" placeholder="How are you? I hope you're well." class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>